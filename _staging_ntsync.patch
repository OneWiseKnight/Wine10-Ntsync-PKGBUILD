+static char *next_part(char **str, BOOL strip_quotes)
+{
+    char *start = *str;
+    char *next = *str;
+
+    while (*next && *next != ',')
+        next++;
+
+    if (!*next)
+    {
+        *str = trim(start, NULL, strip_quotes);
+        return NULL;
+    }
+
+    *next = 0;
+    *str = trim(start, NULL, strip_quotes);
+    return ++next;
+}
